---
const { title, id } = Astro.props;
---

<section id={id}>
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style>
    h2 {
        margin-bottom: 8px;
        font-family: "Poppins", sans-serif;
        font-weight: 300;
        line-height: 1.5;
        font-size: 1.5rem;
        margin-top: 50px;
    }
    
    
    
</style>
