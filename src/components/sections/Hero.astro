---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
const { name, label, image, location, profiles, email } = basics;
import Mail from "@/icons/email.svg";
import LinkedIn from "@/icons/linkedin.svg";
import Github from "@/icons/github.svg";
import World from "@/icons/worldColor.svg";

const { city, country } = location;

const SOCIAL_ICONS: Record<string, any> = {
    Github,
    LinkedIn,
}
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>  
                <World/>
                {city}, {country}
            </span>
            <footer>
                {
                    email && (
                        <a
                            href={`mailto:${email}`}
                            title={`Envia un correo a ${name}, al correo ${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    profiles.map(({ network, url, username }) => {
                        const Icon = SOCIAL_ICONS[network];

                        return (
                            <a
                                href={url}
                                title={`Visitar el perfil de ${name} en ${network}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        );
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        margin-top: 50px;
        font-family: "Segoe UI", sans-serif;
        font-weight: 100;
        color: #6c6c6c;
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    img{
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 6px;
    }

    footer {
        display: flex;
        gap: 10px;
        margin-top: 8px;
    }

    footer a {
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all .3s ease;
    }

    footer a:hover {
        background: #eee;
    }

    svg {
		width: 20px;
		height: 20px;
	}

    span {
        color: #666;
    }

</style>
