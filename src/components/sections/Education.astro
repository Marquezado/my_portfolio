---
import Section from "../Section.astro";
import { education } from "@cv";
---

<Section title="Education">
    <div class="container">
        <img src="/src/images/idatLogo.svg" alt="logo">
        <ul>
        {
            education.map(
                ({ institution, area, startDate, endDate, studyType }) => {
                    const startYear = new Date(startDate).getFullYear();
                    const endYear =
                        endDate != null
                            ? new Date(endDate).getFullYear()
                            : "Presente";
                    const years = `${startYear} - ${endYear}`;

                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{institution}</h3>
                                        <h4>{area}</h4>
                                    </div>
                                    <time>{years}</time>
                                </header>
                                <footer>
                                    <p>{studyType}</p>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
    </div>
</Section>

<style>

    .container {
        display: flex;
        align-items: center;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }
    
    ul {
        display: flex;
        width: 100%;
        flex-direction: column;
        list-style-type: none;
        padding-left: 20px;

    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
        height: 80px;
    }

    time {
        margin-top: 20px;
        color: #555;
        font-size: 0.85rem;
    }

    p {
        color: #777;
        margin: auto;
    }

    img {
        width: 100px;
        height: 100px;
    }
</style>
