---
import Section from "../Section.astro";

import { skills } from "@cv";
---

<Section title="Habilidades">
    <div>
        <ul id="skills-list">
            {
                skills.map(({ name, color }, index) => (
                    <li
                        style={`--bg-color: ${color}`}
                        class={index === 0 ? "active" : ""}
                    >
                        <span>{name}</span>
                    </li>
                ))
            }
        </ul>
    </div>
</Section>

<style>
    div {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    ul {
        list-style-type: none;
        display: flex;
        justify-content: center;
        gap: 5px;
        flex-wrap: wrap;
        padding: 0px;
        padding-bottom: 3rem;
    }

    li {
        display: flex;
        border-radius: 15px;
        background: #f3f3f36f;
        color: black;
        font-size: 0.8rem;
        font-weight: 400;
        padding: 0.1rem 0.3rem;
        transition:
            background-color 0.1s ease-in-out,
            color 0.5s ease-in-out,
            transform 0.1s ease-in-out,
            box-shadow 0.5s ease-in-out;
        height: 50px;
        width: 80px;
        justify-content: center;
        align-items: center;
        cursor: default;
    }

    li:hover {
        background-color: color-mix(in srgb, var(--bg-color) 100%, black);
        color: white;
        transform: scale(1.3);
    }

    li.active {
        background-color: var(--bg-color);
        color: white;
        transform: scale(1.1);
        box-shadow: 0 0 10px var(--bg-color);
    }
</style>

<script type="module">
    const skills = document.querySelectorAll("#skills-list li");
    let current = 0;

    setInterval(() => {
        skills[current].classList.remove("active");

        current = (current + 1) % skills.length;

        skills[current].classList.add("active");
    }, 450);
</script>
